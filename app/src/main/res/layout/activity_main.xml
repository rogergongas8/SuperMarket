<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="4dp"> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marketplace"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="-0.02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explora lo último en tecnología"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_articulos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/container_bottom"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="16dp"> <Button
        android:id="@+id/btn_ir_a_cesta"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Ver Cesta"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/brand_blue"
        app:cornerRadius="12dp"
        android:stateListAnimator="@null"/>
    </LinearLayout>

</RelativeLayout>