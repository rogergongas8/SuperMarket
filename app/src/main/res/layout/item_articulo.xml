<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:contentPadding="12dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#F3F4F6"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/item_imagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/item_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MacBook Pro"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_precio_unidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200.00€"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/item_precio_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00€"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textColor="@color/brand_blue"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/item_btn_sumar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_solid"
            app:backgroundTint="@null"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:elevation="0dp"
            android:stateListAnimator="@null"/>

        <TextView
        android:id="@+id/item_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_primary"
        android:layout_marginVertical="8dp"/>

        <Button
            android:id="@+id/item_btn_restar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_outline"
            android:text="-"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:elevation="0dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>